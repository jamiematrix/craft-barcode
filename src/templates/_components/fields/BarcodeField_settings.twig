{% import "_includes/forms" as forms %}

{# {% do view.registerAssetBundle("webdna\\barcode\\assetbundles\\barcode\\BarcodeAsset") %} #}

{{ forms.textField({
    label: 'Property',
    instructions: 'Enter the property that will be used to generate the barcode',
    id: 'property',
    name: 'property',
    value: field['property']})
}}

<hr>
<a class="fieldtoggle" data-target="advanced">{{ "Advanced"|t('app') }}</a>
    <div id="advanced" class="hidden">

{{ forms.selectField({
    label: 'Type',
    instructions: 'Choose the type of barcode',
    id: 'type',
    name: 'type',
	options: types,
    value: field['type']})
}}

{{ forms.textField({
    label: 'Width Ratio',
    instructions: 'Enter the ratio for the width',
    id: 'width',
    name: 'width',
    value: field['width']})
}}

{{ forms.textField({
    label: 'Height',
    instructions: 'Enter the height',
    id: 'height',
    name: 'height',
    value: field['height']})
}}

{{ forms.colorField({
    label: 'Color',
    instructions: 'Choose the color',
    id: 'color',
    name: 'color',
    value: field['color']})
}}
</div>
